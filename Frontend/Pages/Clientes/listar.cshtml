@page
@model MyApp.Namespace.listarclienteModel
@{
}

<div class="justify-content-center text-center">
  <h1>Lista de Clientes</h1>
    <br>
</div>
<div>
<div>
<a asp-page="Crear"><button type="button" class="btn btn-success">Crear nuevo Cliente</button></a>
</div>
    <br>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>CIUDAD</th>
            <th>FECHA DE INGRESO</th>
            <th>TIPO DE VEHICULO</th>
            <th>DETALLES</th>
            <th>ACTUALIZAR</th>
            <th>ELIMINAR</th>
        </tr>
        @foreach(var cliente in Model.Clientes){
            <tr>
                <td>@cliente.Id</td>
                <td>@cliente.Ciudad</td>
                <td>@cliente.FechaIngreso</td>
                <td>@cliente.TipoVehiculo</td>
                <td>
                <a asp-page="./Detalles" asp-route-id="@cliente.Id"><button type="button" class="btn btn-info">Detalles</button></a>   
                </td>
                <td>
                 <a asp-page="./Actualizar" asp-route-id="@cliente.Id"><button type="button" class="btn btn-primary">Actualizar</button></a>   
                </td>
                <td>
                 <a asp-page="./Eliminar" asp-route-id="@cliente.Id"><button type="button" class="btn btn-danger">Eliminar</button></a>   
                </td>
            </tr>
        }
    </table>
</div>
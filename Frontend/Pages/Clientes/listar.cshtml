@page
@model MyApp.Namespace.listarclienteModel
@{
}

<div class="justify-content-center text-center">
  <h2>Lista de Clientes</h2>
    <br>
</div>
<div>
<div>
<a asp-page="Crear"><button type="button" class="btn btn-success">Crear nuevo Cliente</button></a>
</div>
    <br>
    <table width="1200" border="0" cellspacing="2" cellpadding="1">
        <tr>
            <th style="font-size:0.4cm;">ID</th>
            <th style="font-size:0.4cm;">CIUDAD</th>
            <th style="font-size:0.4cm;">FECHA DE INGRESO</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var cliente in Model.Clientes){
            <tr>
                <td>@cliente.Id_cliente</td>
                <td>@cliente.Ciudad</td>
                <td>@cliente.FechaIngreso</td>
                <td>
                <a asp-page="./Detalles" asp-route-id="@cliente.Id_cliente"><button type="button" class="btn btn-info" style="font-size:0.4cm;">Detalles</button></a>   
                </td>
                <td>
                 <a asp-page="./Actualizar" asp-route-id="@cliente.Id_cliente"><button type="button" class="btn btn-primary" style="font-size:0.4cm;">Actualizar</button></a>   
                </td>
                <td>
                 <a asp-page="./Eliminar" asp-route-id="@cliente.Id_cliente"><button type="button" class="btn btn-danger" style="font-size:0.4cm;">Eliminar</button></a>   
                </td>
            </tr>
        }
    </table>
</div>
    </tr>  
    <tr>
      <td width="260" style="font-size:0.4cm;">Campo adional 2</td>
      <td width="340">
        <input asp-for"Personas.campo2" class="form-control" size="35" style="font-size:0.4cm;" />
      </td>
    </tr>
    <tr>
      <td width="260" style="font-size:0.4cm;">Campo adional 3</td>
      <td width="340">
        <input asp-for"Personas.campo3" class="form-control" size="35" style="font-size:0.4cm;" />
      </td>
    </tr>
    </table>
    <br>
    <div class="justify-content-center text-center">
      <input type="submit"  class="btn btn-success" name="Submit" value="Enviar Datos" />
    </div>
    <hr>
 </form>


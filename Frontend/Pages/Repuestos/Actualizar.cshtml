    <hr>
    <form method="post" >

        <div class="container">
        <div class="row">
    <div class="col"><strong>@Html.DisplayNameFor(m => m.Repuesto.NombreParte)</strong></div>
    <div class="col">@Html.TextBoxFor(m => m.Repuesto.NombreParte)</div>
        <div class="w-100"></div>
    <div class="col"><strong>@Html.DisplayNameFor(m => m.Repuesto.Valor)</strong></div>
    <div class="col">@Html.TextBoxFor(m => m.Repuesto.Valor)</div>
  </div><br>
    <hr>
    <input type="hidden"  asp-for="Repuesto"/>    

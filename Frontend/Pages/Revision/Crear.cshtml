@page
@model MyApp.Namespace.CrearRevisionModel
@{
}
<div class="justify-content-center text-center">
    <h1>Crear Nueva Revision</h1>
    <br>
    <hr>
 </div>
<form method="post">
  <table class="table-hover" width="600" height="300"  align="center" >
    <tr>
      <td width="260">Numero Revision</td>
      <td width="340">
       <input asp-for="Revisiones.NoRevision" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.NoRevision" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    <tr>
      <br>
      <td width="260">Placa de Vehiculo</td>
      <td width="340">
        <input asp-for="Revisiones.NoPlaca" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.NoPlaca" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    <tr>
      <td width="260">Tipo de Mantenimiento</td>
      <td width="340">
        <input asp-for="Revisiones.TipoMantenimiento" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.TipoMantenimiento" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    <tr>
      <td width="260">Fecha de Revision</td>
      <td width="340">
        <input asp-for="Revisiones.FechaRevision" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.FechaRevision" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    <tr>
      <td width="260">Estado de Filtro</td>
      <td width="340">
        <input asp-for="Revisiones.EstadoFiltro" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.EstadoFiltro" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr> 
    <tr>
      <td width="260">Repuesto</td>
      <td width="340">
        <input asp-for="Revisiones.Repuesto" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.Repuesto" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
     <tr>
      <td width="260">Estado de Aceite</td>
      <td width="340">
        <input asp-for="Revisiones.EstadoAceite" class="form-control" size="35" />
      <span asp-validation-for="Revisiones.EstadoAceite" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr> 
    </table>
    <br>
    <div class="justify-content-center text-center">
      <input type="submit"  class="btn btn-success" name="Submit" value="Enviar Datos" />
    </div>
    <hr>
 </form>
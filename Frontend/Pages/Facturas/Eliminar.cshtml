@page
@model MyApp.Namespace.EliminarFacturaModel
@{
}
<div class="justify-content-center text-center">
    <h1>Eliminara la siguiente factura</h1>
    <hr><br>
    <div class="container">
  <div class="row">
    <div class="col" ><strong>Fecha de Facturacion</strong></div>
    <div class="col">@Html.DisplayFor(m => m.Facturas.FechaFacturacion)</div>
        <div class="w-100"></div>
    <div class="col"><strong>Costo de Revision</strong></div>
    <div class="col"> @Html.DisplayFor(m => m.Facturas.CostoRevision)</div>
        <div class="w-100"></div>
    <div class="col"><strong>Costo de Repuesto</strong></div>
    <div class="col">@Html.DisplayFor(m => m.Facturas.CostoRepuesto)</div>
        <div class="w-100"></div>
    <div class="col"><strong>IVA</strong></div>
    <div class="col">@Html.DisplayFor(m => m.Facturas.Iva)</div>
        <div class="w-100"></div>
    <div class="col"><strong>TOTAL</strong></div>
    <div class="col">@Html.DisplayFor(m => m.Facturas.Total)</div>
  </div><br>
    <hr>
    <form method="post" >
    <input type="hidden"  asp-for="Facturas.Id_factura"/>    
    <input type="submit" value="Confirmar" class="btn btn-danger" asp-page="/Eliminar/OnPost"/>    
    </form>
</div>
<div class="justify-content-center text-left"><a asp-page="./Listar">Ir a Gestion de Facturas</a></div>
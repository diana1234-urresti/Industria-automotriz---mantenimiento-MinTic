@page
@model MyApp.Namespace.ListarFacturaModel
@{
}

<div class="justify-content-center text-center">
  <h1>Lista de Facturas</h1>
    <br>
</div>
<div>
<div>
<a asp-page="Crear"><button type="button" class="btn btn-success">Crear nueva Factura</button></a>
</div>
    <br>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>Fecha de Facturacion</th>
            <th>Costo de Revision</th>
            <th>Costo de Repuesto</th>
            <th>IVA</th>
            <th>Total</th>
            <th>DETALLES</th>
            <th>ACTUALIZAR</th>
            <th>ELIMINAR</th>
        </tr>
        @foreach(var factura in Model.Facturas){
            <tr>
                <td>@factura.Id</td>
                <td>@factura.FechaFacturacion</td>
                <td>@factura.CostoRevision</td>
                <td>@factura.CostoRepuesto</td>
                <td>@factura.Iva</td>
                <td>@factura.Total</td>
                <td>
                <a asp-page="./Detalles" asp-route-id="@factura.Id"><button type="button" class="btn btn-info">Detalles</button></a>   
                </td>
                <td>
                 <a asp-page="./Actualizar" asp-route-id="@factura.Id"><button type="button" class="btn btn-primary">Actualizar</button></a>   
                </td>
                <td>
                 <a asp-page="./Eliminar" asp-route-id="@factura.Id"><button type="button" class="btn btn-danger">Eliminar</button></a>   
                </td>
            </tr>
        }
    </table>
</div>
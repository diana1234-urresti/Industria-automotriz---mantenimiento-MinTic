@page
@model MyApp.Namespace.ActualizarFacturaModel
@{
}
<div class="justify-content-center text-center">
    <h1>Actualizar Datos de la Factura</h1>
    <br>
    <hr>
    <form method="post">

        <div class="container">
        <div class="row">
    <div class="col" ><strong>Fecha de Facturacion</strong></div>
    <div class="col">@Html.TextBoxFor(m => m.Facturas.FechaFacturacion)</div>
        <div class="w-100"></div>
    <div class="col"><strong>Costo de Revision</strong></div>
    <div class="col"> @Html.TextBoxFor(m => m.Facturas.CostoRevision)</div>
        <div class="w-100"></div>
    <div class="col"><strong>Costo de Repuesto</strong></div>
    <div class="col">@Html.TextBoxFor(m => m.Facturas.CostoRepuesto)</div>
        <div class="w-100"></div>
    <div class="col"><strong>IVA</strong></div>
    <div class="col">@Html.TextBoxFor(m => m.Facturas.Iva)</div>
        <div class="w-100"></div>
    <div class="col"><strong>TOTAL</strong></div>
    <div class="col">@Html.TextBoxFor(m => m.Facturas.Total)</div>
  </div><br>
    <hr>
    <input type="hidden"  asp-for="Facturas.Id"/>
    <input type="hidden"  asp-for="Facturas"/>    
    <input type="submit" value="Actualizar" class="btn btn-primary" asp-page="Actualizar/OnPost"/>    
    </form>
</div>
 <div class="justify-content-center text-left"><a asp-page="./Listar">Ir a Gestion de Facturas</a></div>
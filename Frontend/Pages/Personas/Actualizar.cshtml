@page
@model MyApp.Namespace.ActualizarModel
@{
}
<div class="justify-content-center text-center">
    <h2>Actualizar Datos de la Persona</h2>
    <br>
    <hr>
    <form method="post" >

        <div class="container">
        <div class="row">
    <div class="col" style="font-size:0.4cm;"><strong>@Html.DisplayNameFor(m => m.Personas.Nombre)</strong></div>
    <div class="col" style="font-size:0.4cm;size 50">@Html.TextBoxFor(m => m.Personas.Nombre)</div>
        <div class="w-100"></div>
    <div class="col" style="font-size:0.4cm;"><strong>@Html.DisplayNameFor(m => m.Personas.Apellido)</strong></div>
    <div class="col" style="font-size:0.4cm;size 50"> @Html.TextBoxFor(m => m.Personas.Apellido)</div>
        <div class="w-100"></div>
    <div class="col" style="font-size:0.4cm;"><strong> @Html.DisplayNameFor(m => m.Personas.Direccion)</strong></div>
    <div class="col" style="font-size:0.4cm;size:50">@Html.TextBoxFor(m => m.Personas.Direccion)</div>
        <div class="w-100"></div>
    <div class="col" style="font-size:0.4cm;"><strong>@Html.DisplayNameFor(m => m.Personas.Email)</strong></div>
    <div class="col" style="font-size:0.4cm;size 100">@Html.TextBoxFor(m => m.Personas.Email)</div>
  </div><br>
    <hr>
    <input type="hidden"  asp-for="Personas.Id"/>
    <input type="hidden"  asp-for="Personas"/>    
    <input type="submit" value="Actualizar" class="btn btn-primary" asp-page="Actualizar/OnPost"/>    
    </form>
</div>
 <div class="justify-content-center text-left"><a asp-page="./listar">Ir a Gestion Personas</a></div>
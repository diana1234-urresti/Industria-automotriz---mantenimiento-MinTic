@page
@model MyApp.Namespace.listarModel
@{
}

<div class="justify-content-center text-center">
    <h1>Lista de Personas</h1>
    <br>
</div>
<div>
<div>
<a asp-page="Crear">Crear nueva persona</a>
</div>
    <br>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>NOMBRES</th>
            <th>APELLIDOS</th>
            <th>DIRECCION</th>
            <th>CORREO E</th>
            <th>DETALLES</th>
            <th>ACTUALIZAR</th>
            <th>ELIMINAR</th>
        </tr>
        @foreach(var persona in Model.Personas){
            <tr>
                <td>@persona.Id</td>
                <td>@persona.Nombre</td>
                <td>@persona.Apellido</td>
                <td>@persona.Direccion</td>
                <td>@persona.Email</td>
                <td>
                 <a asp-page="Detalles">Detalles</a>   
                </td>
                <td>
                 <a asp-page="Actualizar">Actualizar</a>   
                </td>
                <td>
                 <a asp-page="Eliminar">Eliminar</a>   
                </td>
            </tr>
        }
    </table>
</div>
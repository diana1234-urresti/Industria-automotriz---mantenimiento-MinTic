@page
@model MyApp.Namespace.listarModel
@{
}

<div class="justify-content-center text-center">
  <h2>Lista de Personas</h2>
    <br>
</div>
<div>
<div>
<a asp-page="Crear"><button type="button" class="btn btn-success">Crear nueva persona</button></a>
</div>
    <br>
    <table width="1200" border="0" cellspacing="2" cellpadding="1">
        <tr>
            <th style="font-size:0.4cm;">ID</th>
            <th style="font-size:0.4cm;">NOMBRES</th>
            <th style="font-size:0.4cm;">APELLIDOS</th>
            <th style="font-size:0.4cm;">DIRECCION</th>
            <th style="font-size:0.4cm;">CORREO E</th>
            <th></th>
            <th></th>
            <th></th>
        </tr>
        @foreach(var persona in Model.Personas){
            <tr>
                <td style="font-size:0.4cm;">@persona.Id_persona</td>
                <td style="font-size:0.4cm;">@persona.Nombre</td>
                <td style="font-size:0.4cm;">@persona.Apellido</td>
                <td style="font-size:0.4cm;">@persona.Direccion</td>
                <td style="font-size:0.4cm;">@persona.Email</td>
                <td>
                <a asp-page="./Detalles" asp-route-id="@persona.Id_persona"><button type="button" class="btn btn-info" style="font-size:0.4cm;">Detalles</button></a>   
                </td>
                <td>
                 <a asp-page="./Actualizar" asp-route-id="@persona.Id_persona"><button type="button" class="btn btn-primary" style="font-size:0.4cm;">Actualizar</button></a>   
                </td>
                <td>
                 <a asp-page="./Eliminar" asp-route-id="@persona.Id_persona"><button type="button" class="btn btn-danger" style="font-size:0.4cm;">Eliminar</button></a>   
                </td>
            </tr>
        }
    </table>
</div>
@page
@model MyApp.Namespace.listarModel
@{
}

<div class="justify-content-center text-center">
  <h1>Lista de Personas</h1>
    <br>
</div>
<div>
<div>
<a asp-page="Crear"><button type="button" class="btn btn-success">Crear nueva persona</button></a>
</div>
    <br>
    <table class="table">
        <tr>
            <th>ID</th>
            <th>NOMBRES</th>
            <th>APELLIDOS</th>
            <th>DIRECCION</th>
            <th>CORREO E</th>
            <th>DETALLES</th>
            <th>ACTUALIZAR</th>
            <th>ELIMINAR</th>
        </tr>
        @foreach(var persona in Model.Personas){
            <tr>
                <td>@persona.Id</td>
                <td>@persona.Nombre</td>
                <td>@persona.Apellido</td>
                <td>@persona.Direccion</td>
                <td>@persona.Email</td>
                <td>
                <a asp-page="Detalles" ><button type="button" class="btn btn-info">Detalles</button></a>   
                </td>
                <td>
                 <a asp-page="Actualizar"><button type="button" class="btn btn-primary">Actualizar</button></a>   
                </td>
                <td>
                 <a asp-page="Eliminar"><button type="button" class="btn btn-danger">Eliminar</button></a>   
                </td>
            </tr>
        }
    </table>
</div>
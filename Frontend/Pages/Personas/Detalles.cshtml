@page
@model MyApp.Namespace.DetallesModel
@{
}
<div class="justify-content-center text-center">
    <h2>Detalles Persona</h2>
    <br>
    <hr><br>

      <table class="table-hover" width="600" height="300"  align="center" asp-validation-summary="ModelOnly" class="text-danger" >
    <tr>
      <td width="260" style="font-size:0.4cm;">Nombres</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.Nombre)
       <span asp-validation-for="Personas.Nombre" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    <tr>
      <td width="260" style="font-size:0.4cm;">Apellidos</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.Apellido)
        <span asp-validation-for="Personas.Apellido" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    <tr>
      <td width="260" style="font-size:0.4cm;">Direccion</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.Direccion)
      </td>
    </tr>
    <tr>
      <td width="260" style="font-size:0.4cm;">Corre Electronico</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.Email)
        <span asp-validation-for="Personas.Email" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    <tr>
      <td width="260"style="font-size:0.4cm;" >Numero de Indentificacion</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.Identificacion)
        <span asp-validation-for="Personas.Identificacion" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>  
    <tr>
      <td width="260" style="font-size:0.4cm;">Fecha de Nacimiento</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.FechaN)
        <span asp-validation-for="Personas.FechaN" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    <tr>
      <td width="260" style="font-size:0.4cm;">Telefono / Celular</td>
      <td width="340">@Html.DisplayFor(m => m.Personas.Telefono)
        <span asp-validation-for="Personas.Telefono" class="text-danger" style="font-size:0.4cm;"></span>
      </td>
    </tr>
    </table>
 <br>
    <hr>
